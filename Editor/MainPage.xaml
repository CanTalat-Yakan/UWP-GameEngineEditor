<Page
    x:Class="Editor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Editor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <controls:DockPanel>

            <!--MENU -->
            <MenuBar x:Name="x_MenuBar_Menu" controls:DockPanel.Dock="Top"/>

            <!--STATUS -->
            <Grid controls:DockPanel.Dock="Bottom">
                <CommandBar>
                    <CommandBar.PrimaryCommands>
                    </CommandBar.PrimaryCommands>

                    <CommandBar.SecondaryCommands>
                    </CommandBar.SecondaryCommands>

                    <CommandBar.Content>
                        <TextBlock x:Name="x_TextBlock_Status_Content" Text="Engine Ready..." Margin="12,14"/>
                    </CommandBar.Content>
                </CommandBar>
            </Grid>

            <!--MAIN-->
            <Grid>
                
            </Grid>
        </controls:DockPanel>
    </Grid>
</Page>
